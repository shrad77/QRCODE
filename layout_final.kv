<Function>:
   Screen:
      name: 'Landing'
      MDTopAppBar:
         title: 'QR Code Generator'
         font_style: 'H5'
         pos_hint: {"top":1}
         specific_text_color: 0,0,0,1
         elevation: 8

      MDFillRoundFlatIconButton:
         text: 'View previous Batch test certificates'
         pos_hint: {'center_x': .5, 'center_y': .4}

      MDFillRoundFlatIconButton:
         text: 'Generate a new QR'
         pos_hint: {'center_x': .5, 'center_y': .2}
         on_release : root.current = 'first'

   Screen:
      name: 'first'
      MDTopAppBar:
         title: 'QR Code Generator'
         font_style: 'H5'
         pos_hint: {"top":1}
         specific_text_color: 0,0,0,1
         elevation: 8


      MDRoundFlatIconButton:
         text: "Open manager"
         icon: "folder"
         pos_hint: {'center_x': .2, 'center_y': .6}
         on_release: root.file_chooser()



      MDTextField:
         id: text_field
         hint_text: 'Select a file'
         on_focus: if self.focus: root.dropdown()
         write_tab: False
         readonly: True
      MDRectangleFlatButton:
         text: 'Search'
         on_press: root.search_file()

